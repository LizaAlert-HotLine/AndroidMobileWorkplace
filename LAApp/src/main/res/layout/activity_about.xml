<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_version"
            style="@style/about_text" />

        <LinearLayout
            android:id="@+id/license_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/accent_material_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_license_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expander_open_holo_light"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ico_license_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expander_close_holo_light"
                android:visibility="visible" />

            <TextView
                style="@style/about_title"
                android:text="@string/msg_license" />
        </LinearLayout>

        <TextView
            android:id="@+id/about_license"
            style="@style/about_text"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/authors_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/accent_material_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_authors_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expander_open_holo_light"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ico_authors_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expander_close_holo_light"
                android:visibility="visible" />

            <TextView
                style="@style/about_title"
                android:text="@string/msg_authors" />
        </LinearLayout>

        <TextView
            android:id="@+id/about_authors"
            style="@style/about_text"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
</ScrollView>